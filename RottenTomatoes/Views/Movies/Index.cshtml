@model IEnumerable<RottenTomatoes.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CriticReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudienceReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalLanguage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Runtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActorRoles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TomatometerScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudienceScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platforms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Synopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CriticReview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AudienceReview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clasification)
            </td>
