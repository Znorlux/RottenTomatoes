@{
}
@model RottenTomatoes.Models.User

@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>

<body>
    <!-- partial:index.partial.html -->
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>RottenTomatoes Login</title>
        <!-- La ruta /login/ es realmente buscada desde la carpeta wwwroot donde se deberan encontrar los js y css de las paginas-->
        <link rel="stylesheet" href="/login/style.css">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('body').hide().fadeIn(0);
            });
        </script>
    </head>
    <body>
        <!-- partial:index.partial.html -->
        <div class="form">

            <ul class="tab-group">
                <li class="tab"><a onclick="window.location.href='/Users/Create'">Registrarse</a></li>
                <li class="tab active"><a onclick="window.location.href='/Users/Login'">Iniciar Sesión</a></li>
            </ul>
            <script>
                function fadePage(event) {
                    event.preventDefault(); // previene el comportamiento predeterminado del enlace

                    $('body').fadeOut(2000, function () {
                        window.location.href = event.target.href; // redirige al usuario después de que se haya completado el efecto de fade-out
                    });

                    return false;
                }
            </script>

                <div id="login">
                    <h1>¡Bienvenido de nuevo!</h1>

                    <form asp-action="Login">
                        @if (ViewBag.Error != null)
                        {
                            <p style="color: red;">@ViewBag.Error</p>
                        }
                        <div class="field-wrap">
                            <label>
                                Nombre de usuario<span class="req">*</span>
                            </label>
                            <input type="text" name="username" required autocomplete="off" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Contraseña<span class="req">*</span>
                            </label>
                            <input type="password" name="password" required autocomplete="off" />
                        </div>

                        <!--<p class="forgot"><a href="#">Forgot Password?</a></p>-->

                        <button type="submit" class="button button-block">Iniciar Sesión</button>

                    </form>
                </div>
            </div><!-- tab-content -->

        </div> <!-- /form -->
        <!-- partial -->
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src="/login/script.js"></script>

    </body>
</html>
<!-- partial -->

</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
